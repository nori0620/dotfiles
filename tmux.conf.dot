set -g default-terminal screen-256color
set -sg escape-time 1
setw -g mode-keys vi

#like bim key bind
bind s split-window -v
bind v split-window -h

bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# ウィンドウリストの色を設定する
setw -g window-status-style bg="white"
setw -g window-status-style fg="dim"
setw -g window-status-style "default"

# アクティブなウィンドウを目立たせる
setw -g window-status-current-style bg="white"
setw -g window-status-current-style fg="bright"
setw -g window-status-current-style "red"

